<%= form_with(model: @event) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <br>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <br>
    <%= form.rich_text_area :description, cols:50, rows: 5, class:"form-control" %>
  </div>
 
  <div class="form-group">
    <%= form.label :date %>
    <br>
    <%= form.time_field:time, cols:50, rows: 5, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <br>
    <%= form.text_field :description, cols:50, rows: 5, class:"form-control" %>
  </div>
  <div class="form-group">
         <%= form.label :image %>
        <br>
        <%= form.file_field :image, class:"form-control" %> 
        <br>
    </div>
 
  <%= form.submit "Submit", class:"ui primary button mt-2" %>

<% end %>



