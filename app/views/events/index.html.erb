


<div class="container d-flex justify-content-center align-items-center m-4">
<div class="ui link cards flex justify-content-center align-items-start m-4">
<% @events.each do |event| %>
<div class="ui card" href="">
  <div class="content">
    <h2 class="ui">
  <img href="<%= event_path(event)%>" src="https://media.istockphoto.com/photos/business-people-having-a-meeting-picture-id1015934018?k=20&m=1015934018&s=612x612&w=0&h=9Q6gt-coI62h0uqok1FReHMhN_-M7ZhvyrTxNdEqGgg=" class="ui rounded image">
  <p class="text-dark mt-2" ><%= link_to event.title, event_path(event), style:"text-decoration: none; color: black" %></p>          
</h2>
    <div class="meta">
      <span class="category"><%= event.location %></span>
    </div>
    <div class="description">
      <p><%= event.description %></p>
      <p>Event Date: <%= event.date.strftime("%Y-%m-%d %I:%M") %></p>
    </div>
  </div>
  <div class="extra content">

    <div class="right floated author">
      <img class="ui avatar image" src="https://semantic-ui.com/images/avatar2/large/molly.png"><%= event.organizer.full_name %>
    </div>
  </div>
</div>
<% end %>
  </div>
  </div>
