 <section >
  
  <div class="mask d-flex align-items-center h-100 gradient-custom-3 pb-0">
    <div class="container h-100 pb-0">
      <div class="container row d-flex justify-content-center align-items-center h-100 pb-0">

  <div class="container card shadow p-3 mb-5 bg-white rounded m-4" >
                <h2>New Post</h2>
                    <%= form_with(model:[@post]) do |f| %>
                    <div class="form-group">
                    <%= f.label :title %>
                    <br>
                    <%= f.text_field :title, class:"form-control" %>
                    <br>
                    </div>
                    <div class="form-group">
                    <%= f.label :description %>
                    <br>
                    <%= f.rich_text_area :description, cols: 50, rows: 5, class:"form-control" %>
                    <br>
                    </div>
                    <div class="form-group">
                    <%= f.label :image %>
                    <br>
                    <%= f.file_field :image, class:"form-control" %> 
                    <br>
                    </div>
                    <%= f.submit "Post", class:"ui primary button" %>
                <% end %>
               
        </div>
        </div>
        </div>
        </div>
        </div>
</section>