<h1>User's show page</h1>

<p>Name: <%= @user.first_name %><p>

  <%   if @user.image.attached? && @user.image.content_type.in?(%w[image/jpeg image/png image/gif])%>
             <%= link_to image_tag(@user.image_as_thumbnail), @user.image %>
        <% end %>

<h1><%= link_to @user.first_name, user_path(@user), style:"text-decoration: none; color: black" %></h1>

<p>Email: <%=@user.email%></p>

<div>
    <h1>About me: </h1>
    <button class="ui basic button"><i class="icon user"></i><%= link_to "Profile", user_path(@user), style:"text-decoration: none; color: black" %></button>
    <%= button_to "Add Friend", user_path(@user), method: :post, class:"ui active button" %>
</div>


<div>
<h1>Friends: </h1>
<% @user.friendships.each do |f| %>
  
    <% friend = @allusers.find_by(id: f.friend_id) %>
    <p><%= friend.full_name %></p>
<% end %>

</div>