<%= form_with(model:[@group, @group_post]) do |f| %>
    <div class="form-group">
    <%= f.label :body %>
    <br>
    <%= f.rich_text_area :body, cols: 50, rows: 5, class:"form-control" %>
    <br>
    </div>
    <div class="form-group">
    <%= f.label :image %>
    <br>
    <%= f.file_field :image, class:"form-control" %> 
    <br>
    </div>

    <%= f.submit "Post", class:"ui primary button" %>

<% end %>