<%= form_with(model: @group) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <br>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <br>
    <%= form.rich_text_area :description, cols:50, rows: 5, class:"form-control" %>
  </div>
    <%= form.label :city_or_address %>
    <br>
    <%= form.text_field :address, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :img_url %>
    <br>
    <%= form.text_field :img_url, class:"form-control" %>
  </div>
  <%= form.submit "Submit", class:"ui primary button mt-2" %>
<% end %>
