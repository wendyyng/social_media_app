<h1>Search</h1>

<%= render 'search/form' %>

    <h1 class="text-center my-5"><%= pluralize(@groups.count, "Result") %> with "<%=@keyword%>"</h1>
<% @groups.each do |group| %>
<div class="card m-2 p-2 d-flex justify-content-around align-items-center" style="width: 30rem;">
    <img class="card-img-top p-2" src="https://picsum.photos/200" alt="Card image cap">
      <h3 class="card-title fw-bold text-reset p-2" ><%= link_to group.title, group_path(group), style:"text-decoration: none; color: black" %></h3>
         <p><%= group.description %></p>
         <p>Created by: <%= group.user.first_name %></p>
         <a class="ui button btn btn-dark text-uppercase p-3" href="<%= group_path(group) %>">Enter Group</a>
    </div>
<% end %>